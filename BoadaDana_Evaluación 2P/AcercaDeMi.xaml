<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoadaDana_Evaluación_2P.AcercaDeMi"
             Title="AcercaDeMi">
    <Grid Padding="20" RowSpacing="20" ColumnSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Name -->
        <Frame Grid.Row="0" Grid.Column="0" BorderColor="#512BD4" CornerRadius="10" HasShadow="True">
            <StackLayout>
                <Label Text="Nombre" FontAttributes="Bold" TextColor="#512BD4"/>
                <Label Text="Dana Boada" FontSize="16"/>
            </StackLayout>
        </Frame>

        <!-- Date of Birth -->
        <Frame Grid.Row="0" Grid.Column="1" BorderColor="#512BD4" CornerRadius="10" HasShadow="True">
            <StackLayout>
                <Label Text="Fecha de Nacimiento" FontAttributes="Bold" TextColor="#512BD4"/>
                <Label Text="15/11/2002" FontSize="16"/>
            </StackLayout>
        </Frame>

        <!-- Interests -->
        <Frame Grid.Row="1" Grid.Column="0" BorderColor="#512BD4" CornerRadius="10" HasShadow="True">
            <StackLayout>
                <Label Text="Intereses" FontAttributes="Bold" TextColor="#512BD4"/>
                <Label Text="Tocar piano, programar, jugar videojuegos, escuchar musica, hablar aleman." FontSize="16"/>
            </StackLayout>
        </Frame>

        <!-- App Version -->
        <Frame Grid.Row="1" Grid.Column="1" BorderColor="#512BD4" CornerRadius="10" HasShadow="True">
            <StackLayout>
                <Label Text="Versión de la App" FontAttributes="Bold" TextColor="#512BD4"/>
                <Label Text="1.0.0" FontSize="16"/>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>