<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoadaDana_Evaluación_2P.MainPage"
             Title="Dana Boada - Examen">
    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="Dana Boada" 
           FontSize="32" 
           HorizontalOptions="Center"
           FontAttributes="Bold"
           Margin="0,0,0,20"/>

        <Image Source="estrella.png"
           HeightRequest="200"
           WidthRequest="200"
           HorizontalOptions="Center"
           Aspect="AspectFill"/>

        <Button Text="Ver Chistes"
            Clicked="OnJokesButtonClicked"
            BackgroundColor="#512BD4"
            TextColor="White"
            CornerRadius="10"
            Margin="0,20,0,0"/>

        <Button Text="Acerca de"
            Clicked="OnAboutButtonClicked"
            BackgroundColor="#512BD4"
            TextColor="White"
            CornerRadius="10"
            Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>