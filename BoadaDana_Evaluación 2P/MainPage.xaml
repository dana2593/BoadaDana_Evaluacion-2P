<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoadaDana_Evaluación_2P.MainPage"
             Title="Dana Boada - Examen">

    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

        <Label 
            Text="Dana Boada"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            FontAttributes="Bold"
            HorizontalOptions="Center" 
            TextColor="#2E3440" />

        <Image
            Source="dana_profile.png"
            SemanticProperties.Description="Imagen de perfil de Dana"
            HeightRequest="200"
            WidthRequest="200"
            Aspect="AspectFill"
            HorizontalOptions="Center" />

        <Button
            x:Name="JokesButton"
            Text="Ver Chistes"
            BackgroundColor="#5E81AC"
            TextColor="White"
            FontSize="18"
            CornerRadius="10"
            Clicked="OnJokesButtonClicked"
            HorizontalOptions="Center"
            WidthRequest="200" />

        <Button
            x:Name="AboutButton"
            Text="Acerca de"
            BackgroundColor="#81A1C1"
            TextColor="White"
            FontSize="18"
            CornerRadius="10"
            Clicked="OnAboutButtonClicked"
            HorizontalOptions="Center"
            WidthRequest="200" />

    </VerticalStackLayout>
</ContentPage>